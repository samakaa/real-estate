 <div class="main-content">
   <div class="main-content-inner">
     <div class="button-show-hide show-mb">
       <span class="body-1">Show Dashboard</span>
     </div>
     <div class="widget-box-2 wd-listing">
       <h6 class="title">My Favorites</h6>
       <div class="wrap-table">
         <div class="table-responsive">

           <table>
             <thead>
               <tr>
                 <th>LISTING TITLE</th>
                 <th>Date Published</th>
                 <th>Action</th>
               </tr>
             </thead>
             <tbody>
               <% @properties.each do |property| %>
               <%= form_with url: property_path(property), method: :delete, local: true do |form| %>
               <%= form.submit "Delete", class: "item", data: { confirm: "Are you sure?" } %>
               <% end %>

               <%= link_to property_path(property), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
               <i class="icon icon-trash"></i>Delete
               <% end %>
               <a data-turbo-method="delete" data-turbo-confirm="Are you sure?" href="/properties/36" class="btn btn-danger">
                 <i class="icon icon-trash"></i>Delete
               </a>
               <%= link_to property_path(property), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
               <i class="icon icon-trash"></i>Delete
               <% end %>


               <tr class="file-delete">
                 <td>
                   <div class="listing-box">
                     <a href="<%= property_path(property) %>">
                       <div class="images">
                         <%= image_tag(property.images.first || 'default-image.jpg', alt: property.title) %>
                       </div>
                     </a>
                     <div class="content">
                       <div class="title"> <a href="<%= property_path(property) %>" class="link"><%= property.title %></a>
                       </div>
                       <div class="text-date"><%= property.address %></div>
                       <div class="text-1 fw-7"><%= property.price %> TND
                         <% if property.status== "For Rent" %>
                         <span class="text-variant-1">/month</span>
                         <% end %>
                       </div>

                     </div>
                   </div>
                 </td>
                 <td>
                   <span><%= property.created_at.strftime('%d') %> <%= property.created_at.strftime('%B') %> <%= property.created_at.strftime(', %Y') %></span>
                 </td>

                 <td>
                   <ul class="list-action">
                     <li><a href="<%= edit_property_path(property) %>" class="item"><i class="icon icon-edit"></i>Edit</a></li>
                     <li><a class="item"><i class="icon icon-sold"></i>Sold</a></li>

                     <li> <%= link_to property_path(property), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: ' item' do %>
                       <i class="icon icon-trash"></i>Delete
                       <% end %>
                     <li>
                   </ul>
                 </td>
               </tr>


               <% end %>

             </tbody>
           </table>
         </div>

         <ul class="wd-navigation">
           <li><a href="#" class="nav-item active">1</a></li>
           <li><a href="#" class="nav-item">2</a></li>
           <li><a href="#" class="nav-item">3</a></li>
           <li><a href="#" class="nav-item"><i class="icon icon-arr-r"></i></a></li>
         </ul>
       </div>
     </div>
   </div>
