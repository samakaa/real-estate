<h1>Property Details</h1>

<div class="property">
  <h2><%= @property.title %></h2>
  <p><strong>Description:</strong> <%= @property.description %></p>

  <p><strong>Price:</strong> $<%= @property.price %></p>
  <p><strong>Unit Price:</strong> $<%= @property.unit_price %></p>
  <p><strong>Location:</strong> <%= @property.location %></p>
  <p><strong>Zip Code:</strong> <%= @property.zip_code %></p>
  <p><strong>Country:</strong> <%= @property.country %></p>
  <p><strong>Neighborhood:</strong> <%= @property.neighborhood %></p>


  <p><strong>Size (SqFt):</strong> <%= @property.size %></p>
  <p><strong>Land Area (SqFt):</strong> <%= @property.land_area %></p>
  <p><strong>Year Built:</strong> <%= @property.year_built %></p>
  
  <p><strong>Rooms:</strong> <%= @property.rooms %></p>
  <p><strong>Bedrooms:</strong> <%= @property.bedrooms %></p>
  <p><strong>Bathrooms:</strong> <%= @property.bathrooms %></p>
  <p><strong>Garages:</strong> <%= @property.garages %></p>

  <p><strong>Amenities:</strong> <%= @property.amenities.join(", ") if @property.amenities %></p>

  <h3>Media</h3>
  <% if @property.images.attached? %>
    <div class="property-images">
      <% @property.images.each do |image| %>
        <%= image_tag(image, class: "property-image", size: "200x200") %>
      <% end %>
    </div>
  <% else %>
    <p>No images available</p>
  <% end %>

<h2>Attachments</h2>
<ul>
  <% @property.attachments.each do |attachment| %>
    <li>
      <%= link_to attachment.filename.to_s, rails_blob_path(attachment, disposition: "attachment") %>
    </li>
  <% end %>
</ul>

</div>
